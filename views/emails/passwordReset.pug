
extends baseEmail

block content
  p Hi #{firstName},
  p Forgot your password? For reset your password, Please click the button below and Submit a request with new password and password confirm:
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Reset your password
  p If you didn't forget your password, then please ignore this email